{
  "name": "2d-action-game",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "deploy": "node scripts/deploy.js",
    "deploy:build": "npm run build",
    "deploy:copy": "rm -rf assets/ index.html && cp -r dist/* .",
    "deploy:commit": "git add . && git commit -m \"Deploy to GitHub Pages\" && git push origin main"
  },
  "dependencies": {
    "pixi.js": "^7.4.0"
  },
  "devDependencies": {
    "@types/pixi.js": "^5.0.0",
    "cross-env": "^10.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.3.1"
  }
}
